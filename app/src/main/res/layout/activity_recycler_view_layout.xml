<?xml version="1.0" encoding="utf-8"?>
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/containerMaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="16dp"
        android:focusable="true">

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageView_userPhoto"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_person_black_24dp" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageView_locationIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintStart_toEndOf="@id/imageView_userPhoto"
                    app:layout_constraintTop_toBottomOf="@id/textView_Maker"
                    app:srcCompat="@drawable/ic_location_on_black_24dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textView_location"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Baguio Philippines"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView_locationIcon"
                    app:layout_constraintStart_toEndOf="@id/imageView_locationIcon"
                    app:layout_constraintTop_toTopOf="@id/imageView_locationIcon" />



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textView_Maker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text= "Nhick Flores"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="16sp"
                    style="@style/TextAppearance.AppCompat.Title"
                    app:layout_constraintTop_toTopOf="@id/imageView_userPhoto"
                    app:layout_constraintStart_toEndOf="@id/imageView_userPhoto"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageView_DateIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView_userPhoto"
                    app:layout_constraintStart_toEndOf="@id/imageView_userPhoto"
                    app:layout_constraintTop_toBottomOf="@+id/imageView_locationIcon"
                    app:srcCompat="@drawable/ic_date_range_black_24dp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textView_timeDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="June 18 2019 - July 08 2019"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@id/imageView_DateIcon"
                    app:layout_constraintStart_toEndOf="@id/imageView_DateIcon"
                    app:layout_constraintBottom_toBottomOf="@id/imageView_DateIcon"
                    style="@style/TextAppearance.AppCompat.Subhead" />



            </androidx.constraintlayout.widget.ConstraintLayout>


            <TableLayout
                android:background="#dcdcdc"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </TableLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/noto_sans"
                android:text="Baguio Trips"
                android:textSize="24sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView_gala"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic[4]" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_bio"
                android:visibility="gone"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/noto_sans"
                android:textSize="16sp" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
